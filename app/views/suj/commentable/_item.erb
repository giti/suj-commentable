<li id='suj-comment-<%= comment.id -%>' class='suj-commentable-item' style='margin-left: <%= comment.depth.to_i * 1.3 -%>em'>
<% if ! comment.author.blank? -%>
  <div class='suj-commentable-author'>by <%= comment.author.name -%></div>
<% end -%>
<div class='suj-commentable-time'>Created <%= distance_of_time_in_words_to_now(comment.created_at) -%> ago</div>
<div class='suj-commentable-text'><%= comment.text -%></div>
<div class='suj-commentable-controls'>
  <span class='suj-commentable-reply-show'><%= reply_toggle "reply" %></span>
  <span><%= unlike_url(comment, "Unlike") -%></span>
  <span><%= like_url(comment, "Like") -%></span>
  <span id='suj-comment-rating-<%= comment.id -%>' class='suj-commentable-rating'>Overall comment score: <label class='suj-commentable-score'><%= comment.rates %></label></span>
</div>
<%= render :partial => 'suj/commentable/form', :formats => [:html], :locals => { :commentable => commentable, :parent => comment } %>
</li>
<ul id='suj-comment-children-list-<%= comment.id -%>' class='suj-commentable-list'>
<% comment.children.order(:created_at => :desc).each do |child| -%>
  <%=  render :partial => 'suj/commentable/item', :formats => [:html], :locals => { :comment => child, :parent => comment, :commentable => commentable } %>
<% end -%>
</ul>
