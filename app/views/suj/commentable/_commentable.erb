<div class='suj-commentable-section'>
  <%= render :partial => "suj/commentable/form", :locals => { :commentable => commentable, :author => author } %>
  <ol id='suj-commentable-<%= commentable.id -%>' class='suj-commentable-list'>
    <% commentable.ordered_comments.each do |comment| %>
    <%= render :partial => 'suj/commentable/item', :locals => { :comment => comment } %>
    <% end %>
  </ol>
</div>
