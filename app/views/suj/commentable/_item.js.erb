var comment = $("<%= escape_javascript render(:partial => 'suj/commentable/item', :formats => [:html], :locals => { :commentable => commentable, :comment => @comment, :author => @comment.author, :parent => @comment.parent }) -%>");
$(".suj-commentable-section form textarea").each(function() {
  $(this).val('');
});
<% if @comment.parent.blank? -%>
  <% if commentable.class.comments_order == :desc -%>
    comment.hide().prependTo('#suj-commentable-<%= commentable.id -%>').fadeIn(500, function(){ comment.show()});
  <% else -%>
    comment.hide().appendTo('#suj-commentable-<%= commentable.id -%>').fadeIn(500, function(){ comment.show()});
  <% end  -%>
<% else -%>
  comment.hide().prependTo('#suj-comment-children-list-<%= @comment.parent.id -%>').fadeIn(500, function(){ comment.show()});
<% end -%>