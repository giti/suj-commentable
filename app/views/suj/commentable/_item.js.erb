var comment = $("<%= escape_javascript render(:partial => 'suj/commentable/item.erb', :formats => [:html], :locals => { :commentable => commentable, :comment => @comment, :author => @comment.author, :parent => @comment.parent }) -%>")

<% if @comment.parent.blank? -%>
  <% if commentable.class.comments_order == :desc -%>
    $('#suj-commentable-<%= commentable.id -%>').prepend(comment.fadeIn(500));
  <% else -%>
    $('#suj-commentable-<%= commentable.id -%>').append(comment.fadeIn(500));
  <%   end  -%>
<% else -%>
  $('#suj-comment-children-list-<%= @comment.parent.id -%>').prepend(comment.fadeIn(500));
<% end -%>

$('.suj-commentable-form').find("textarea").each(function() {
  $(this).val('');
});
